@model WebAppInca.Models.Factura

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Registro</h1>

<h4>Factura</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="form-outline">
                        <label asp-for="Consecutivo" class="control-label"></label>
                        <input asp-for="Consecutivo" class="form-control" />
                        <span asp-validation-for="Consecutivo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="form-outline">
                        <label asp-for="Monto" class="control-label"></label>
                        <input asp-for="Monto" class="form-control" />
                        <span asp-validation-for="Monto" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="form-outline">
                        <label asp-for="CuentaId" class="control-label">Cuenta</label>
                        <select asp-for="CuentaId" class="form-control" asp-items="ViewBag.CuentaId"></select>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="form-group">
                        <label asp-for="FechaEmicion" class="control-label"></label>
                        <input asp-for="FechaEmicion" class="form-control" />
                        <span asp-validation-for="FechaEmicion" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="form-outline">
                        <a class="nav-link dropdown-toggle text-black" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">Proveedor</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-area="" asp-controller="Proveedores" asp-action="Create">Crear Proveedor</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Proveedores" asp-action="Index">Lista Proveedores</a></li>
                        </ul>
                        <select asp-for="ProveedorId" class="form-control" asp-items="ViewBag.ProveedorId"></select>
                    </div>
                </div>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
