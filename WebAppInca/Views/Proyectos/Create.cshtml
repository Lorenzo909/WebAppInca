@model WebAppInca.Models.Proyecto

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Registro de Proyecto</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="form-outline">
                        <label asp-for="Contratacion" class="control-label">Numero Contratacion</label>
                        <input asp-for="Contratacion" class="form-control" />
                        <span asp-validation-for="Contratacion" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="form-outline">
                        <label asp-for="NombreProyecto" class="control-label">Nombre de Proyecto</label>
                        <input asp-for="NombreProyecto" class="form-control" />
                        <span asp-validation-for="NombreProyecto" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="form-outline">
                        <label asp-for="FechaInicio" class="control-label">Fecha de Inicio</label>
                        <input asp-for="FechaInicio" class="form-control" />
                        <span asp-validation-for="FechaInicio" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="form-outline">
                        <label asp-for="FechaFinal" class="control-label">Fecha de Finalizacion</label>
                        <input asp-for="FechaFinal" class="form-control" />
                        <span asp-validation-for="FechaFinal" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="form-outline">
                        <label asp-for="MontoProyecto" class="control-label">Monto de Proyecto</label>
                        <input asp-for="MontoProyecto" class="form-control" />
                        <span asp-validation-for="MontoProyecto" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="form-outline">
                        <label asp-for="GastoMaterial" class="control-label">Gasto de Material</label>
                        <input asp-for="GastoMaterial" class="form-control" />
                        <span asp-validation-for="GastoMaterial" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="form-outline">
                        <label asp-for="GastoManoObra" class="control-label">Gasto de Mano de Obra</label>
                        <input asp-for="GastoManoObra" class="form-control" />
                        <span asp-validation-for="GastoManoObra" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="form-outline">
                        <label asp-for="Utilidad" class="control-label"></label>
                        <input asp-for="Utilidad" class="form-control" />
                        <span asp-validation-for="Utilidad" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
